{
  "extends": [
    "next/core-web-vitals",
    "../../.eslintrc.json"
  ],
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.json",
        "alwaysTryTypes": true
      },
      "node": {
        "project": "./tsconfig.json",
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "import/no-unresolved": "error",
    "no-html-link-for-pages": "off"
  }
} 