{
  "name": "ilovecert",
  "private": true,
  "version": "1.0.0",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "pnpm -r run build",
    "deploy-contracts": "pnpm --filter contracts run deploy",
    "deploy-contracts:sepolia": "pnpm --filter contracts run deploy:sepolia",
    "test": "pnpm -r run test",
    "test:contracts": "pnpm --filter contracts run test",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.2.5",
    "typescript": "~5.3.3",
    "eslint-import-resolver-typescript": "^3.6.1"
  }
}
