{
  "name": "ilovecert",
  "private": true,
  "version": "1.0.0",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm --filter frontend run dev",
    "node": "kill-port 8545 && pnpm --filter contracts run node",
    "deploy-contracts": "pnpm --filter contracts run deploy",
    "deploy-contracts:sepolia": "pnpm --filter contracts run deploy:sepolia",
    "deploy-contracts:mumbai": "pnpm --filter contracts run deploy:mumbai",
    "test": "pnpm -r run test",
    "test:contracts": "pnpm --filter contracts run test",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json,md}\"",
    "clean": "kill-port 8545 3000 && rm -rf packages/contracts/cache packages/contracts/artifacts packages/contracts/typechain-types",
    "reset-node": "cd packages/contracts && npx hardhat clean && npx hardhat compile",
    "start:node": "pnpm clean && pnpm reset-node && pnpm run node",
    "start:deploy": "wait-on -v -i 5000 -t 60000 http://127.0.0.1:8545 && pnpm run deploy-contracts",
    "start:frontend": "wait-on -v -i 5000 -t 60000 http://127.0.0.1:8545 && pnpm run dev",
    "start:dev": "concurrently -n \"node,deploy,frontend\" \"pnpm run start:node\" \"pnpm run start:deploy\" \"pnpm run start:frontend\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "kill-port": "^2.0.1",
    "wait-on": "^7.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.2.5",
    "typescript": "~5.3.3",
    "eslint-import-resolver-typescript": "^3.6.1"
  }
}
